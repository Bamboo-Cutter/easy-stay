          {
            "listen": "test",
            "script": {
              "exec": [
                "try {",
                "  const json = pm.response.json();",
                "  if (json?.access_token) {",
                "    pm.environment.set('token', json.access_token);",
                "  }",
                "} catch (e) {}"
              ],
              "type": "text/javascript"
            }
          }
